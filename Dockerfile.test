FROM mcr.microsoft.com/dotnet/sdk:8.0

# Install build dependencies for MicroPython
RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    make \
    python3 \
    python3-pip \
    git \
    pkg-config \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace